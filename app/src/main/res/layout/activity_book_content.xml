<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookContentActivity">
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
    <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/tvTitleContent"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">
        <TextView
                android:id="@+id/tvAuthorContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author"
                android:layout_gravity="left"
                android:textSize="30sp"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/tvDateContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:layout_gravity="right"
                android:gravity="end"
                android:layout_weight="1"
                android:textSize="30sp"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp">
        <WebView
                android:id="@+id/webViewContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </ScrollView>


</LinearLayout>

<LinearLayout
        android:layout_width="match_parent"
              android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
              android:orientation="horizontal"
        android:gravity="center_horizontal">
    <Button
            android:id="@+id/btnBackContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:onClick="onBtnBackClick"
            android:layout_weight="1"
            android:layout_gravity="center"/>
    <ImageView
            android:id="@+id/imgShareContent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/share"
            android:onClick="onImgShareClick"
            android:layout_weight="1"/>
    <ImageView
            android:id="@+id/imgFaveContent"
            android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/not_favorite"
            android:onClick="onImgFavoriteClick"
               android:layout_weight="1"/>
    <ImageView
            android:id="@+id/imgSeeContent"
            android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/see"
            android:onClick="onImgSeeClick"
               android:layout_weight="1"/>
</LinearLayout>

</android.support.constraint.ConstraintLayout>