<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity">
    <LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="3dp"
              android:orientation="vertical">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/search_title"
                  android:textSize="30sp"/>
        <EditText
                android:id="@+id/etSearchTextSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_gravity="center_horizontal">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_margin="2dp"
                    android:onClick="onBtnFindClicked"
                    android:text="@string/search_btn_title" />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back"
                    android:textSize="30sp"
                    android:layout_margin="2dp"
                    android:onClick="onBtnBackFromSearchClicked"
                    android:gravity="center"/>
        </LinearLayout>
        <RadioGroup
                android:id="@+id/rgSearchCriteria"
                android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <RadioButton
                    android:id="@+id/rbTitleSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/search_as_title"
                    android:checked="true"/>
            <RadioButton
                    android:id="@+id/rbAuthorSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/search_as_author"/>
            <RadioButton
                    android:id="@+id/rbContentSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/search_as_content"/>
        </RadioGroup>
        <ListView
                android:id="@+id/lvSearchResultSearch"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>
    <Button
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:onClick="onBtnBackFromSearchClicked"
            android:gravity="center"/>
</android.support.constraint.ConstraintLayout>