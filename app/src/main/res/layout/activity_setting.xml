<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  tools:layout_editor_absoluteY="0dp"
                  tools:layout_editor_absoluteX="233dp">
        <TextView
                android:text="@string/sound_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">
            <ImageView
                    android:src="@drawable/sound_play"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgSoundStateSettings"
                    android:onClick="onImgSoundStateClicked"/>
            <TextView
                    android:text="sound state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSoundStateSettings"
                    android:layout_weight="1"
                    android:textSize="30sp" android:padding="30dp"/>
        </LinearLayout>
        <TextView
                android:text="@string/screen_light_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">
            <ImageView
                    android:src="@drawable/screen_on"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgLightStateSettings"
                    android:onClick="onImgLightStateClicked"/>
            <TextView
                    android:text="light state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLightStateSettings"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:padding="30dp"/>
        </LinearLayout>

        <TextView
                android:text="@string/font_size_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">
            <ImageView
                    android:src="@drawable/zoom_out"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgFontSizeDownSetting"
                    android:onClick="onImgFontSizeClicked"/>
           <ImageView
                    android:src="@drawable/zoom_in"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgFontSizeUpSetting"
                    android:onClick="onImgFontSizeClicked"/>
            <TextView
                    android:text="font size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFontSizeSettings"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:padding="30dp"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <Button
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:onClick="onBtnBackOfSettingClicked"
            android:gravity="center"/>
</android.support.constraint.ConstraintLayout>